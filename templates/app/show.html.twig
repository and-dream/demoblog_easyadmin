{% extends "base.html.twig" %}


{% block title %}Article{% endblock %}


{% block body %}

<section class="row article">
    
    
        <article class="col-md-8 mx-auto text-center bg-secondary text-dark border border-dark mb-3 p-3 mt-3 mr-1">
            <h2>{{article.title}}</h2>
            <div class="metadata">Ecrit le {{article.createdAt|date('d/m/Y à H:i:s')}} dans la catégorie </div>
            <div class="content">
                <img class="img-fluid" src="{{article.image}}" alt="">
                <div class="py-3 px-5" style="text-align: justify;">{{ article.content}}</div>
                
            </div>
            <a href="{{ path('edit_article', {id: article.id})}}" class="btn btn-warning">modifier</a>
        </article>
 
    </section>

    <h2 class="text-center mx-auto m-3">Commentaires</h2>

    <section id="commentaire" class="col-md-10 mx-auto">
    <table class="table table-light table-sm">
  <thead>
    <tr>
      <th class="col-md-3">User/Time</th>
      <th class="col-md-9">Commentaires</th>
    </tr>
  </thead><tbody>
    {% for comment in article.comments %}

        
  
    <tr>
      <td> {{ comment.author }} <br> (<small>{{comment.createdAt|date('d/m/Y à H:i:s')}}</small>)</td>
      <td>{{comment.content}}</td>
    </tr>
        
    {% endfor %}
    </tbody>
    </table>
    </section>

{% endblock %}